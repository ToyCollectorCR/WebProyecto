@{ Layout = "~/Views/Shared/_LayoutLogin.cshtml";}

<!DOCTYPE html>

<html>

<head>

    <meta name="viewport" content="width=device-width" />

    <title>Login</title>

</head>

<body>

    <div id="LoginUsuario" class="container">

        <div class="row align-items-center justify-content-center" style="height:100vh;">
            <div class="col-6">
                <div class="card ">

                    <div class="row ">

                        <div class="col-md-6">

                            <img src="https://raker.kemendag.go.id/assets/tanya/assets/img/img-login.png" style="width:100%;height:100%" alt="...">

                        </div>

                        <div class="col-md-6">

                            <div class="card-body">

                                <h5 class="card-title text-center">Login</h5>                                 <div class="form-floating mb-3">

                                    <input type="text" class="form-control" id="Usuario" placeholder="Nombre" v-model="Model.Usuario">

                                    <label for="Usuario">Usuario</label>

                                </div>

                                <div class="form-floating">

                                    <input type="password" class="form-control" id="Contrasena" placeholder="Contraseña" v-model="Model.Contrasena">

                                    <label for="Contrasena">Contraseña</label>

                                </div>

                                <br />

                                <div class="row justify-content-center ">

                                    <div class="col-3">

                                        <button type="button" class="btn btn-outline-primary" @@click="LoginUsuario">Login</button>
                                    </div>

                                    <div class="col-5">

                                        <button type="button" class="btn btn-outline-primary"
                                                                        onclick="window.location.href = '/Login/Registrarse';">

                                            Registrarse

                                        </button>

                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>

                </div>
            </div>

        </div>

    </div>

    @section scripts{​​​​         
        <script src="~/Scripts/Login/Login.js"></script>     }​​​​ 
</body>

</html>

