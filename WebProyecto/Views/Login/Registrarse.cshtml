@{ Layout = "~/Views/Shared/_LayoutLogin.cshtml";}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Login</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="Assets/css/sourcesanspro-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="Assets/css/style.css" />
</head>
<body class="form-v8">
    <div class="page-content">
        <div class="form-v8-content">
            <div class="form-left">
                <img src="~/Assets/images/TAGA.png" alt="form">
            </div>
            <div class="form-right">
                <div class="tab">
                    <div class="tab-inner">
                        <button class="tablinks" onclick="window.location.href = '/Login/Index';">Iniciar Sesión</button>
                    </div>
                    <div class="tab-inner">
                        <button class="tablinks" onclick="window.location.href = '/Login/Registrarse';">Registrarse</button>
                    </div>
                </div>
                <form class="form-detail" method="post" id="FormularioRegistrar">
                    <div class="tabcontent" id="RegistrarUsuario">
                        <div class="form-row">
                            <label class="form-row-inner">
                                <input type="text" class="input-text" id="Nombre" placeholder="Nombre" v-model="Model.Nombre" required>
                                <span class="label">Nombre</span>
                                <span class="border"></span>
                            </label>
                        </div>
                        <div class="form-row">
                            <label class="form-row-inner">
                                <input type="text" class="input-text" id="Usuario" placeholder="Usuario" v-model="Model.Usuario" required>
                                <span class="label">Usuario</span>
                                <span class="border"></span>
                            </label>
                        </div>
                        <div class="form-row">
                            <label class="form-row-inner">
                                <input type="password" class="input-text" id="Contrasena" placeholder="Contraseña" v-model="Model.Contrasena" required>
                                <span class="label">Contraseña</span>
                                <span class="border"></span>
                            </label>
                        </div>

                        <div class="form-row-last">
                            <button type="button" @@click="RegistrarUsuario" class="btn btn-light">Registrar Cuenta</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section scripts{

        <script src="~/Scripts/Login/Registrarse.js"></script>
    }
</body>
</html>

