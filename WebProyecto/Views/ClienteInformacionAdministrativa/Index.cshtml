@model List<Entity.ClienteInformacionAdministrativaEntity>

@if (ViewData.ContainsKey("msg"))
{
    <script>
        alert("@ViewData["msg"]");
    </script>
}

<div class="container-fluid">
    <h1>Cliente Informacion Administrativa</h1>
    <div class="row">

        <div class="col-7">
            <button type="button" class="btn btn-outline-primary" onclick="ClickNew()"><i class='bx bx-add-to-queue'></i></button>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-5">
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Tarifa</th>
                        <th>SesionesRayosUVA</th>
                        <th>FechaProximaRenovacion</th>
                        <th>Casillero</th>
                        <th>SaldoMonederoVirtual</th>
                        <th>Tiene Hijos</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Tarifa</td>
                            <td>@item.SesionesRayosUVA</td>
                            <td>@item.FechaProximaRenovacion</td>
                            <td>@item.Casillero</td>
                            <td>@item.SaldoMonederoVirtual</td>
                            <th>@item.TieneHijos</th>
                            <td>
                                <button type="button" class="btn btn-outline-primary" onclick="ClickUpdate(@item.IdClienteInformacionAdmin)"><i class='bx bx-edit-alt'></i></button>
                                <button type="button" class="btn btn-outline-primary" onclick="ClickEliminar(@item.IdClienteInformacionAdmin)"><i class='bx bx-trash'></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{

    <script>
        var ClickNew = function () {
            window.location.href = "ClienteInformacionAdministrativa/Edit";
        }

        var ClickUpdate = function (id) {
            window.location.href = "ClienteInformacionAdministrativa/Edit/" + id;
        }

        var ClickEliminar = function (id) {

            var result = confirm("Esta Seguro que desea eliminar este registro?");

            if (result) window.location.href = "ClienteInformacionAdministrativa/Delete/" + id;

        }
    </script>


}

