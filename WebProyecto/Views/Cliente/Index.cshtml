@model List<Entity.ClienteEntity>


<div class="container-fluid">
    <br />
    <h1>Clientes</h1>
    <br />
    <div class="row">

        <div class="col-3">
            <button type="button" class="btn btn-outline-primary" onclick="ClickNew()"><i class='bx bx-add-to-queue'></i></button>
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-12">
            <table id="GridECliente" class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nombre Cliente</th>
                        <th>DNI Cliente</th>
                        <th>Apellido 1 Cliente</th>
                        <th>Apellido 2 Cliente</th>
                        <th>Direccion Cliente</th>
                        <th>Fecha Nacimiento Cliente</th>
                        <th>Telefono Cliente</th>
                        <th>Estado Cliente</th>
                        <th>SesionesRayosUVA</th>
                        <th>FechaProximaRenovacion</th>
                        <th>Casillero</th>
                        <th>SaldoMonederoVirtual</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.NombreCliente</td>
                        <td>@item.DNICliente</td>
                        <td>@item.Apellido1Cliente</td>
                        <td>@item.Apellido2Cliente</td>
                        <td>@item.DireccionCliente</td>
                        <td>@item.FechaNacimientoCliente</td>
                        <td>@item.TelefonoCliente</td>
                        <td>@(item.EstadoCliente ? "Activo" : "Inactivo")</td>
                        <td>@item.ClienteInformacionAdministrativa.SesionesRayosUVA</td>
                        <td>@item.ClienteInformacionAdministrativa.FechaProximaRenovacion</td>
                        <td>@item.ClienteInformacionAdministrativa.Casillero</td>
                        <td>@item.ClienteInformacionAdministrativa.SaldoMonederoVirtual</td>
                        <td>
                            <button type="button" class="btn btn-outline-primary" onclick="ClickUpdate(@item.IdCliente)"><i class='bx bx-edit-alt'></i></button>
                            <button type="button" class="btn btn-outline-primary" onclick="ClickEliminar(@item.IdCliente)"><i class='bx bx-trash'></i></button>
                        </td>
                    </tr>
}
                </tbody>


            </table>
        </div>

    </div>

</div>



<div id="root">

</div>




@section scripts{
    @if (ViewData.ContainsKey("msg"))
    {
        <script>
            Swal.fire(
                'Eliminado!',
                'Su registro a sido Eliminado.',
                'success'
            );
            var IsLoading = false;
        </script>
    }
    else
    {
        <script>
            var IsLoading = true;
        </script>
    }

    <script src="~/Scripts/Cliente/Index.js"></script>

}