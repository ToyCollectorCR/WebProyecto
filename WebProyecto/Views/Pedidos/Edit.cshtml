@model Entity.PedidosEntity

@{
    var TypeForm = ViewBag.Form as bool?;
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <br />
                    <h4 class="card-title">@(TypeForm.Value ? "Editar Pedidos" : "Nuevos Pedidos")</h4>
                    <br />
                    <form action="/Pedidos/Save" method="post">
                        <input type="hidden" name="IdPedidos" id="IdPedidos" value="@Model.IdPedidos" />

                        <div class="form-floating mb-3 form-group">
                            <input class="form-control" type="text" name="Pedidos" id="Pedidos" v-model="model.Pedidos" required />
                            <label for="Pedidos"> Nombre del Pedido</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="true" id="EstadoPedidos" name="EstadoPedidos" @(Model.EstadoPedidos ? "checked" : "")>
                            <label class="form-check-label" for="EstadoPedidos">
                                Estado Pedidos
                            </label>
                        </div>
                        <br />
                        <div class="mb-3">
                            @if (TypeForm.Value)
                            {
                                <button type="submit" class="btn btn-outline-primary"><i class='bx bx-edit-alt'></i></button> }
                            else
                            {
                                <button type="submit" class="btn btn-outline-primary"><i class='bx bx-save'></i></button>}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>