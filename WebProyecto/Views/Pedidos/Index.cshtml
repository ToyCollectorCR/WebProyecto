@model List<Entity.PedidosEntity>

@if (ViewData.ContainsKey("msg"))
{
    <script>
        alert("@ViewData["msg"]");
    </script>
}

<div class="container-fluid">
    <br />
    <h1>Pedidos</h1>
    <br />
    <div class="row">
        <div class="col-3">
            <button type="button" class="btn btn-outline-primary" onclick="ClickNew()"><i class='bx bx-add-to-queue'></i></button>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-2">
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Pedidos</th>
                        <th>Estado Pedidos</th>
                        <th>Accion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Pedidos</td>
                            <td>@(item.EstadoPedidos ? "Activo" : "Inactivo")</td>

                            <td>
                                <button type="button" class="btn btn-outline-primary" onclick="ClickUpdate(@item.IdPedidos)"><i class='bx bx-edit-alt'></i></button>
                                <button type="button" class="btn btn-outline-primary" onclick="ClickEliminar(@item.IdPedidos)"><i class='bx bx-trash'></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="root">

</div>

@section scripts{

    <script>
        var ClickNew = function () {
            window.location.href = "Pedidos/Edit";
        }

        var ClickUpdate = function (id) {
            window.location.href = "Pedidos/Edit/" + id;
        }

        var ClickEliminar = function (id) {

            var result = confirm("Esta Seguro que desea eliminar este registro?");

            if (result) window.location.href = "Pedidos/Delete/" + id;

        }
    </script>


}